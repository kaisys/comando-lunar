generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  priority    String
  assignedTo  String?   // Puede ser nulo
  status      String    @default("Pendiente") // Estado de la tarea
  createdAt   DateTime  @default(now())
}


model Resource {
  id       Int      @id @default(autoincrement())
  type     String   @unique
  level    Float
  critical Boolean
  events   Event[]  
}

model Event {
  id          Int      @id @default(autoincrement())
  resourceId  Int
  message     String
  createdAt   DateTime @default(now())

  resource    Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
}
